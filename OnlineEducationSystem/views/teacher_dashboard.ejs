<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Dashboard</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        padding: 20px;
        background-image: url("Signin.jpg");
        background-size: cover;
      }

      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }

      .card {
        box-sizing: border-box;
        width: 220px;
        height: 300px;
        background: rgba(217, 217, 217, 0.58);
        border: 1px solid white;
        box-shadow: 12px 17px 51px rgba(0, 0, 0, 0.22);
        backdrop-filter: blur(6px);
        border-radius: 17px;
        padding: 10px;
        cursor: pointer;
        transition: all 0.5s;
        padding-top: 20px;
        margin: 15px;
        background-color: rgba(237, 185, 117, 0.8);
        backdrop-filter: blur(5px);
      }

      .card:hover {
        border: 1px solid black;
        transform: scale(1.05);
      }

      .card:active {
        transform: scale(0.95) rotateZ(1.7deg);
      }

      h2 {
        text-align: center;
        text-transform: uppercase;
        margin-top: 0;
        color: rgb(239, 105, 15);
        margin-bottom: 50px;
      }

      p {
        margin-top: 5px;
      }

      strong {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div style="text-align: center; margin-bottom: 5%; margin-top: 5%">
      <h1>Teacher Dashboard</h1>
    </div>
    <div class="container">
      <% teachers.forEach(function(teacher) { %>
      <div class="card">
        <h2><%= teacher.name %></h2>
        <p><strong>Email:</strong><br /><%- teacher.email %></p>
        <p><%= teacher.role %></p>
        <p>Course Teaching: <%= teacher.courseTeach %></p>
      </div>
      <% })%>
    </div>
  </body>
</html>
